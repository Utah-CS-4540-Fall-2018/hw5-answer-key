<%= form_with url: new_user_session_path, method: :post, local: true do |form| %>
  <div class="form-inputs">
    <%= form.label :email %>
    <%= form.text_field :email, placeholder: 'john@email.com' %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>

  <div>
    Not yet signed up?  Register <%= link_to 'here', new_user_path %>
  </div> 
<% end %>
